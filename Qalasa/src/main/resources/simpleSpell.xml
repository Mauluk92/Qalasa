<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="aleph" name="aleph, daled" class="it.aleph.spell.impl.Word" c:sigill="A" c:verb="NE"/>
    <bean id="gimel" name="gimel, zayn" class="it.aleph.spell.impl.Word" c:sigill="B" c:verb="QY"/>

    <bean id="restAleph" name="restAleph, restDaled" class="it.aleph.spell.impl.Rest" p:commandWord-ref="aleph"/>
    <bean id="restGimel" name="restGimel, restZayn" class="it.aleph.spell.impl.Rest" p:commandWord-ref="gimel"/>
</beans>